<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dose Title:"
        android:id="@+id/textView"/>

    <EditText
        android:id="@+id/etDoseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:hint="Enter dose title"
        android:inputType="text"/>

    <Button
        android:id="@+id/btDoseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDoseTitle"
        android:layout_marginTop="10dp"
        android:text="Select Due Date"/>

    <Button
        android:id="@+id/btnDoseDialogSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btDoseDate"
        android:layout_marginTop="10dp"
        android:text="Save"/>

    <Button
        android:id="@+id/btnDoseDialogClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btDoseDate"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btnDoseDialogSave"
        android:text="Close"/>

</RelativeLayout>
